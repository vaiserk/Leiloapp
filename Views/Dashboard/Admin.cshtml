@model Leiloapp.Controllers.DashboardController.AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard Admin";
}

@using System.Text.Json
@using System.Linq
<div class="container mt-4">
    <h1>Dashboard Administrador</h1>

    <div class="row mt-3">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Usuários</h6>
                    <p>Total: @Model.TotalUsuarios</p>
                    <p>Pendentes: @Model.UsuariosPendentes</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Leilões</h6>
                    <p>Ativos: @Model.LeiloesAtivos</p>
                    <p>Finalizados: @Model.LeiloesFinalizados</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Pagamentos</h6>
                    <p>Pendentes: @Model.PagamentosPendentes</p>
                    <p>Pagos: @Model.PagamentosPagos</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Arrecadação</h6>
                    <p>Total: R$ @Model.TotalArrecadado.ToString("F2")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Arrecadação x Situação dos Lotes</h6>
                    <canvas id="chartPizza" height="220"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Valor Mínimo x Valor Vendido (Top 10)</h6>
                    <canvas id="chartBarras" height="220"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h4>Top 5 Leilões por Arrecadação</h4>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Título</th>
                    <th>Leiloeiro</th>
                    <th>Status</th>
                    <th>Arrecadado</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var l in Model.TopLeiloes)
                {
                    <tr>
                        <td>@l.Titulo</td>
                        <td>@l.Leiloeiro?.Nome</td>
                        <td>@(l.Status == 0 ? "Aberto" : l.Status == 1 ? "Em Andamento" : "Finalizado")</td>
                        <td>
                            @{
                                var total = Model.ArrecadadoPorLeilao != null && Model.ArrecadadoPorLeilao.ContainsKey(l.Id)
                                    ? Model.ArrecadadoPorLeilao[l.Id]
                                    : l.ValorArrecadado;
                            }
                            R$ @total.ToString("F2")
                        </td>
                        <td><a asp-controller="Leilao" asp-action="Details" asp-route-id="@l.Id" class="btn btn-sm btn-primary">Abrir</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        (function initCharts() {
            function ensureChartLoaded(cb) {
                if (window.Chart) return cb();
                const alt = document.createElement('script');
                alt.src = 'https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.0/chart.umd.min.js';
                alt.onload = cb;
                document.body.appendChild(alt);
            }

            function render() {
                try {
                    const ctxPizza = document.getElementById('chartPizza');
                    const ctxBarras = document.getElementById('chartBarras');
                    if (!ctxPizza || !ctxBarras) return;

                    const pizzaModel = [@Model.LotesVendidos, @Model.LotesNaoVendidos, @Model.LotesNaoIniciados, @Model.LotesEmLicitacao];
                    const pizzaData = (pizzaModel.some(x => x > 0)) ? pizzaModel : [5, 3, 2, 1];
                    const dadosPizza = {
                        labels: ['Vendidos', 'Não Vendidos', 'Não Iniciados', 'Em Licitação'],
                        datasets: [{
                            data: pizzaData,
                            backgroundColor: ['#198754', '#6c757d', '#0d6efd', '#ffc107']
                        }]
                    };
                    const cfgPizza = { type: 'pie', data: dadosPizza, options: { plugins: { legend: { position: 'bottom' }, tooltip: { callbacks: { label: (ctx) => `${ctx.label}: ${ctx.raw}` } } } } };
                    new Chart(ctxPizza, cfgPizza);

                    const labelsBarras = @Html.Raw(JsonSerializer.Serialize<IEnumerable<string>>((Model.LotesComparativo?.Any() ?? false) ? Model.LotesComparativo.Select(l => l.Titulo) : new [] { "Lote A", "Lote B", "Lote C", "Lote D" }));
                    const valoresMinimos = @Html.Raw(JsonSerializer.Serialize<IEnumerable<double>>((Model.LotesComparativo?.Any() ?? false) ? Model.LotesComparativo.Select(l => (double)l.ValorMinimo) : new [] { 100.0, 200.0, 150.0, 300.0 }));
                    const valoresVendidos = @Html.Raw(JsonSerializer.Serialize<IEnumerable<double>>((Model.LotesComparativo?.Any() ?? false) ? Model.LotesComparativo.Select(l => (double)l.ValorVendido) : new [] { 120.0, 180.0, 210.0, 320.0 }));
                    const dadosBarras = {
                        labels: labelsBarras,
                        datasets: [
                            { label: 'Valor Mínimo', data: valoresMinimos.map(Number), backgroundColor: '#0d6efd' },
                            { label: 'Valor Vendido', data: valoresVendidos.map(Number), backgroundColor: '#198754' }
                        ]
                    };
                    const cfgBarras = { type: 'bar', data: dadosBarras, options: { responsive: true, scales: { y: { beginAtZero: true } }, plugins: { legend: { position: 'bottom' } } } };
                    new Chart(ctxBarras, cfgBarras);
                } catch (e) { console.error('Erro ao renderizar gráficos:', e); }
            }

            if (document.readyState === 'complete' || document.readyState === 'interactive') {
                ensureChartLoaded(render);
            } else {
                window.addEventListener('DOMContentLoaded', function () { ensureChartLoaded(render); });
            }
        })();
    </script>
}