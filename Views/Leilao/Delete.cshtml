@model Leiloapp.Models.Entities.Leilao

@{
    ViewData["Title"] = "Excluir Leilão";
}

<div class="container mt-4">
    <h1>Excluir Leilão</h1>
    <hr />

    <div class="alert alert-warning">Tem certeza que deseja excluir este leilão?</div>
    <p class="text-muted">Todos os lotes associados serão removidos automaticamente.</p>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Arrecadado</dt>
        <dd class="col-sm-10">R$ @Model.ValorArrecadado.ToString("F2")</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
    </form>
</div>