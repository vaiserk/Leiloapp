@model Leiloapp.Models.Entities.Lote

@{
    ViewData["Title"] = "Editar Lote";
}

<div class="container mt-4">
    <h2>Editar Lote</h2>
    <hr />
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="LeilaoId" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">NÃºmero do Lote</label>
            <input asp-for="Numero" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Nome do Produto</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Nome do Doador</label>
            <input asp-for="NomeDoador" class="form-control" />
            <span asp-validation-for="NomeDoador" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ValorInicial" class="form-label"></label>
            <input asp-for="ValorInicial" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="ValorInicial" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ValorMinimo" class="form-label"></label>
            <input asp-for="ValorMinimo" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="ValorMinimo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descricao" class="form-label"></label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Visivel" class="form-check-input" />
            <label asp-for="Visivel" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-leilaoId="@Model.LeilaoId">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}