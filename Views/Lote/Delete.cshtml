@model Leiloapp.Models.Entities.Lote

@{
    ViewData["Title"] = "Excluir Lote";
}

<div class="container mt-4">
    <h2>Excluir Lote</h2>
    <hr />
    <div class="alert alert-warning">Tem certeza que deseja excluir este lote?</div>
    <dl class="row">
        <dt class="col-sm-2">NÃºmero</dt>
        <dd class="col-sm-10">@Model.Numero</dd>
        <dt class="col-sm-2">Produto</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>
        <dt class="col-sm-2">Doador</dt>
        <dd class="col-sm-10">@Model.NomeDoador</dd>
        <dt class="col-sm-2">Valor Inicial</dt>
        <dd class="col-sm-10">R$ @Model.ValorInicial.ToString("F2")</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a class="btn btn-secondary" asp-action="Index" asp-route-leilaoId="@Model.LeilaoId">Cancelar</a>
    </form>
</div>